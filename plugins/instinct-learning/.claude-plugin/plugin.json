{
  "name": "instinct-learning",
  "version": "1.0.0",
  "description": "Instinct-based learning system that observes your sessions, learns atomic behaviors with confidence scoring, and evolves them into skills/commands/agents",
  "author": "zhengyu.li",
  "license": "MIT",
  "hooks": {
    "PreToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-tool.sh",
        "async": true
      }]
    }],
    "PostToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/post-tool.sh",
        "async": true
      }]
    }],
    "Stop": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/stop.sh",
        "async": true
      }]
    }]
  },
  "commands": [
    {"name": "instinct:status", "source": "commands/status.md"},
    {"name": "instinct:evolve", "source": "commands/evolve.md"},
    {"name": "instinct:export", "source": "commands/export.md"},
    {"name": "instinct:import", "source": "commands/import.md"},
    {"name": "instinct:session", "source": "commands/session.md"}
  ],
  "skills": [
    {"name": "session-memory", "source": "skills/session-memory.md"}
  ],
  "agents": [
    {"name": "observer", "source": "agents/observer.md"}
  ]
}
